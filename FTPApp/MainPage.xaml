<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FTPApp.MainPage">
    <VerticalStackLayout Padding="30,20" Spacing="20">
    <NavigationPage.TitleView>
        <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Image Source="logo.ico" HeightRequest="40"/>
            <Label Text="FTP Uploader" 
                   VerticalOptions="Center"
                   TextColor="Black"
                   FontSize="18"
                   Margin="10,0,0,0"/>
        </HorizontalStackLayout>
    </NavigationPage.TitleView>

        <!-- Top Image -->
        <Image Source="swiftdeploylogo.jpg" HeightRequest="250" HorizontalOptions="Center" /> 

        <!-- User Email Entry -->
        <Entry x:Name="EmailEntry" Placeholder="Enter your email" Keyboard="Email" />

        <!-- Username Entry (app username or SFTP username per your flow) -->
        <Entry x:Name="UsernameEntry" Placeholder="Enter your username" />

        <!-- Password Entry -->
        <Entry x:Name="PasswordEntry" Placeholder="Enter your password" IsPassword="True" />

        <!-- Buttons -->
        <HorizontalStackLayout Spacing="25" HorizontalOptions="Center">
            <Button Text="Upload Folder" Clicked="OnUploadFolderClicked"/>
            <Button Text="Upload File(s)" Clicked="OnUploadFilesClicked"/>
        </HorizontalStackLayout>

        <!-- Loading indicator (shown while preparing/uploading) -->
        <HorizontalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
            <ActivityIndicator x:Name="LoadingIndicator" IsVisible="False" IsRunning="False" WidthRequest="24" HeightRequest="24" />
            <Label x:Name="StatusLabel" Text="Status will appear here" VerticalOptions="Center" />
        </HorizontalStackLayout>

        <!-- Uploaded filename and copy button (hidden until upload succeeds) -->
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center" IsVisible="True">
            <Label x:Name="UploadedFileLabel" Text="" IsVisible="False" VerticalOptions="Center" />
            <Button x:Name="CopyFilenameButton" Text="Copy filename" IsVisible="False" Clicked="OnCopyFilenameClicked"/>
        </HorizontalStackLayout>

         </VerticalStackLayout>
</ContentPage>
